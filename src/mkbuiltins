tempfile=mktemp
if ! type tempfile > /dev/null 2>&1 && ! type mktemp > /dev/null 2>&1; then
	_my_tempfile()
	{
		local index=0
		while test -f "${TMPDIR:-/tmp}/builtin.$$.$index"; do
			index=`expr $index + 1`
		done

		touch "${TMPDIR:-/tmp}/builtin.$$.$index"
		echo "${TMPDIR:-/tmp}/builtin.$$.$index"
	}

	tempfile="_my_tempfile"
elif ! type tempfile > /dev/null 2>&1; then
	tempfile="mktemp ${TMPDIR:-/tmp}/builtin.XXXXXX"
fi

trap 'rm -f $temp' EXIT
temp=$($tempfile)

builtins=$1

awk '/^[^#]/ {
  opt = ""
  for (i = 2; i <= NF; ++i) {
    if ($i ~ /^-/) {
      opt = $i
    } else {
      printf "%s\t%s\t%s\n", $i, $1, opt
      opt = ""
    }
  }
}' $builtins | LC_ALL=C sort > $temp

exec > builtins.c
cat <<EOF
/*
 * This file was generated by the mkbuiltins program.
 */

#include "config.h"

#include "shell.h"
#include "builtins.h"

const struct builtincmd builtincmd[] = {
EOF
awk '{
  mask = 0
  if ($3 ~ /n/)    { $2 = "NULL" }
  if ($3 ~ /s/)    { mask += 1 }
  if ($3 ~ /[su]/) { mask += 2 }
  if ($3 ~ /a/)    { mask += 4 }
  printf "\t{ \"%s\", %s, %d },\n", $1, $2, mask
  opt = ""
}' $temp
cat <<EOF
};
EOF

exec > builtins.h
cat <<EOF
/*
 * This file was generated by the mkbuiltins program.
 */

EOF
LC_ALL=C awk '{
  if (!seen[$2]++) {
    printf "#define %s (builtincmd + %d)\n", toupper($2), (NR-1)
  }
}' $temp | LC_ALL=C sort
awk 'END { printf "\n#define NUMBUILTINS %d\n", NR }' $temp
cat <<EOF

#define BUILTIN_SPECIAL 0x1
#define BUILTIN_REGULAR 0x2
#define BUILTIN_ASSIGN 0x4

struct builtincmd {
	const char *name;
	int (*builtin)(int, char **);
	unsigned flags;
};

extern const struct builtincmd builtincmd[];

EOF
awk '/^ *[^# ]/ {
  if ($2 !~ /^-.*n/) {
    printf "int %s(int argc, char *argv[]);\n", $1
  }
}' $1 | LC_ALL=C sort
